{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["es6"],
        "jsx": "react-native",
        "noEmit": true,
        "isolatedModules": true,
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "*": ["src/*"],
        },
        "allowJs": true,
        "strictNullChecks": true
    },
    "include": ["./src/", ".eslintrc.js", "metro.config.js", "index.js"],
    "exclude": ["node_modules", "babel.config.js", "jest.config.js"]
}
